#!/bin/bash -e

# https://stackoverflow.com/questions/5014632/how-can-i-parse-a-yaml-file-from-a-linux-shell-script
function parse_yaml() {
  local prefix=$2
  local s='[[:space:]]*' w='[a-zA-Z0-9_]*' fs=$(echo @ | tr @ '\034')
  sed -ne "s|^\($s\):|\1|" \
    -e "s|^\($s\)\($w\)$s:$s[\"']\(.*\)[\"']$s\$|\1$fs\2$fs\3|p" \
    -e "s|^\($s\)\($w\)$s:$s\(.*\)$s\$|\1$fs\2$fs\3|p" $1 \
    | awk -F$fs '{
      indent = length($1)/2;
      vname[indent] = $2;
      for (i in vname) {if (i > indent) {delete vname[i]}}
      if (length($3) > 0) {
         vn=""; for (i=0; i<indent; i++) {vn=(vn)(vname[i])("_")}
         printf("%s%s%s=\"%s\"\n", "'$prefix'",vn, $2, $3);
      }
   }'
}

platform=
unity_install_dir=
unity_bin_path=
if [ "$(uname)" == 'Darwin' ]; then
  platform="osx"
  unity_install_dir="/Applications/Unity/Hub/Editor"
  unity_bin_path="Unity.app/Contents/MacOS/Unity"
elif [ "$(expr substr $(uname -s) 1 10)" == 'MINGW32_NT' -o "$(expr substr $(uname -s) 1 10)" == 'MINGW64_NT' ]; then
  platform="win"
  unity_install_dir="/c/Program Files/Unity/Hub/Editor"
  unity_bin_path="Editor/Unity.exe"
else
  echo "Your platform ($(uname -a)) is not supported." 1>&2
  exit 1
fi

unity_params=()
project_path=.
log_file=
log_stdout=0
while [ "$#" -gt 0 ]; do
  case "${1}" in
    "-projectPath")
      unity_params+=("-projectPath")
      shift
      if [[ ! ${1} =~ ^- ]]; then
        project_path="$1"
        unity_params+=("${project_path}")
      fi
      ;;
    "-logFile")
      unity_params+=("-logFile")
      shift
      if [ -n "${1}" -a ! "${1:0:1}" = "-" ]; then
        log_file="${1}"
        unity_params+=("${log_file}")
      elif [ "${platform}" = "win" ]; then
        # windowsは標準出力できないので一時ファイルにログを書き込む
        log_file=$(mktemp)
        unity_params+=("${log_file}")
        log_stdout=1
      fi
      ;;
    *)
      unity_params+=("${1}")
      ;;
  esac
  if [ "$#" -gt 0 ]; then
    shift
  fi
done

if [ -n "${UNITY_INSTALL_DIR}" ]; then
  unity_install_dir=${UNITY_INSTALL_DIR}
fi
version_file="${project_path%/}/ProjectSettings/ProjectVersion.txt"
unity_version=
if [ -e "${version_file}" ]; then
  eval $(parse_yaml "${version_file}")
  unity_version=${m_EditorVersion}
else
  unity_version=$(ls "${unity_install_dir}" | sort -n -t "." -k 1 -k 2 -k 3 -k 4 | tail -n 1)
fi

unity="${unity_install_dir%/}/${unity_version}/${unity_bin_path}"

"${unity}" "${unity_params[@]}" &
unity_pid=$!

tail_pid=0
if [ ${log_stdout} -eq 1 -a -n "${log_file}" ]; then
  # 一時ファイルに書き込まれたログをtailで出力
  tail -F "${log_file}" 2>/dev/null &
  tail_pid=$!
fi

set +e
wait ${unity_pid}
rc=$?
set -e
if [ ${tail_pid} -ne 0 ]; then
  sleep 1
  kill ${tail_pid}
  retry=3
  while :; do
    rm -f "${log_file}" | cat >/dev/null 2>&1
    if [ ! -e "${log_file}" -o $retry -le 0 ]; then
      break
    fi
    sleep 1
    retry=$((retry - 1))
  done
fi >/dev/null 2>&1

exit $rc
